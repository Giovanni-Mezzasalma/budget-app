# ===========================================================
# BUDGET APP - Environment Variables Template
# Copy this file as .env and fill in your values
# ===========================================================

# ========================= DATABASE ========================
# Full database URL
DATABASE_URL=postgresql://username:password@localhost:5432/budget_app_dev

# Separate credentials
DB_HOST=localhost
DB_PORT=5432
DB_NAME=budget_app_dev
DB_USER=your_username
DB_PASSWORD=your_password

# ========================= SECURITY =========================
# Secret key for JWT (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your_secret_key_min_32_chars

# Algorithm for JWT
ALGORITHM=HS256

# Token duration in minutes (10080 = 7 days)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ========================= APPLICATION =========================
# Debug mode
DEBUG=True

# Server host and port
HOST=0.0.0.0
PORT=8000

# ========================= CORS =========================
# Origins allowed for API calls
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]