# ============================================
# BUDGET APP - Environment Variables Template
# Copia questo file come .env e compila con i tuoi valori
# ============================================

# ==================== DATABASE ====================
# URL completo del database
DATABASE_URL=postgresql://username:password@localhost:5432/budget_app_dev

# Credenziali separate
DB_HOST=localhost
DB_PORT=5432
DB_NAME=budget_app_dev
DB_USER=your_username
DB_PASSWORD=your_password

# ==================== SECURITY ====================
# Secret key per JWT (genera con: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your_secret_key_min_32_chars

# Algoritmo per JWT
ALGORITHM=HS256

# Durata token in minuti (10080 = 7 giorni)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ==================== APPLICATION ====================
# Modalit√† debug
DEBUG=True

# Host e porta server
HOST=0.0.0.0
PORT=8000

# ==================== CORS ====================
# Origins consentite per chiamate API
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]